              <a href="mailto:{{ site.contact.email }}" class="text-white font-medium hover:text-accent-400 transition-colors">{{ site.contact.email }}</a>
              {%- endif %}
            </div>
          </div>
          {%- if site.contact.url %}
          <div class="flex items-center gap-4 p-4 bg-primary-800/50 border border-primary-700/50 rounded-xl">
