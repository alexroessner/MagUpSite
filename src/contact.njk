<section class="relative overflow-hidden py-16 sm:py-24 lg:py-28 bg-primary-950">
  <div class="hero-grid" aria-hidden="true"></div>
  <div class="hero-glow" aria-hidden="true"></div>
  <div class="relative z-10 max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-20">
      <div class="reveal-left">
        <p class="text-accent-400 font-medium text-sm uppercase tracking-widest mb-4">Contact</p>
        <h1 class="font-heading text-4xl sm:text-5xl font-bold text-white mb-6 leading-tight">
