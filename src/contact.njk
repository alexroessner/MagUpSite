<div class="not-prose">
  <div class="bg-primary-800 border border-primary-700 rounded-xl p-8 sm:p-10 max-w-2xl">
    <h2 class="font-heading text-2xl font-bold text-white mb-6">
      Get in Touch
    </h2>
    <p class="text-primary-300 mb-8">
      Ready to see how AI-powered content marketing can grow your brand? Reach out and our team will get back to you.
    </p>

    {%- if site.contact.email or site.contact.phone %}
    <div class="space-y-4 text-primary-200">
      {%- if site.contact.email %}
      <p>
        <strong class="text-white">Email:</strong><br>
        <a href="mailto:{{ site.contact.email }}" class="text-accent-400 underline hover:text-accent-300 transition-colors">
          {{ site.contact.email }}
        </a>
      </p>
      {%- endif %}
      {%- if site.contact.phone %}
      <p>
        <strong class="text-white">Phone:</strong><br>
        {{ site.contact.phone }}
      </p>
      {%- endif %}
      {%- if site.contact.fax %}
      <p>
        <strong class="text-white">Fax:</strong><br>
        {{ site.contact.fax }}
      </p>
      {%- endif %}
    </div>
    {%- endif %}

    {%- if site.contact.address.street %}
    <div class="mt-8 pt-6 border-t border-primary-700">
      <h3 class="font-heading text-lg font-semibold text-white mb-3">Location</h3>
      <address class="not-italic text-primary-200 space-y-1">
        <p>{{ site.contact.address.street }}</p>
        <p>{{ site.contact.address.city }}{% if site.contact.address.state %}, {{ site.contact.address.state }}{% endif %} {{ site.contact.address.zip }}</p>
        {%- if site.contact.address.country %}
        <p>{{ site.contact.address.country }}</p>
        {%- endif %}
      </address>
    </div>
    {%- endif %}
  </div>
</div>
