            <div class="text-center p-4 bg-primary-900/50 rounded-xl">
              <div class="text-2xl sm:text-3xl font-bold text-accent-400">1000+</div>
              <div class="text-sm text-primary-400 mt-1">Enterprise Clients</div>
            </div>
            <div class="text-center p-4 bg-primary-900/50 rounded-xl">
              <div class="text-2xl sm:text-3xl font-bold text-accent-400">10+</div>
              <div class="text-sm text-primary-400 mt-1">AI Platforms</div>
            </div>
            <div class="text-center p-4 bg-primary-900/50 rounded-xl">
              <div class="text-2xl sm:text-3xl font-bold text-accent-400">7</div>
              <div class="text-sm text-primary-400 mt-1">AI Agents</div>
            </div>
            <div class="text-center p-4 bg-primary-900/50 rounded-xl">
              <div class="text-2xl sm:text-3xl font-bold text-accent-400">+450%</div>
              <div class="text-sm text-primary-400 mt-1">Brand Mentions</div>
            </div>
          </div>
        </div>
        <div class="bg-primary-800 border border-primary-700 rounded-2xl p-6">
          <h2 class="font-heading text-lg font-semibold text-white mb-4">Trusted By</h2>
          <div class="flex flex-wrap gap-3">
            {%- for client in pageContent.clients | batch(8) | first %}
            <span class="text-sm text-primary-300 bg-primary-900/50 px-3 py-1.5 rounded-lg border border-primary-700/50">{{ client }}</span>
            {%- endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{# ---- Team Section ---- #}
{%- if pageContent.team.length %}
<section class="py-16 sm:py-24 bg-primary-900 border-t section-divider">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <p class="text-accent-400 font-medium text-sm uppercase tracking-widest mb-4">Our Team</p>
      <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white">
        The People Behind the Platform
      </h2>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 stagger">
      {%- for member in pageContent.team %}
      <div class="card-lift bg-primary-800 border border-primary-700 rounded-2xl p-6 hover:border-accent-500/50">
        <div class="w-12 h-12 bg-accent-500/10 border border-accent-500/20 rounded-xl flex items-center justify-center mb-4">
          <span class="text-accent-400 font-bold text-lg" aria-hidden="true">{{ member.name | first }}</span>
        </div>
        <h3 class="font-heading text-lg font-semibold text-white mb-1">{{ member.name }}</h3>
        {%- if member.title %}
        <p class="text-accent-400 text-sm mb-3">{{ member.title }}</p>
        {%- endif %}
        <p class="text-primary-400 text-sm leading-relaxed">{{ member.bio }}</p>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

