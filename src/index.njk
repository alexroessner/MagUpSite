---
layout: base.njk
title: Home
fullWidth: true
description: ""
---

{# ============================================ #}
{# Hero Section                                 #}
{# ============================================ #}

<section class="bg-primary-800 text-white py-16 sm:py-20 lg:py-24">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
      {{ pageContent.hero.headline | default(site.name) }}
    </h1>
    {%- if pageContent.hero.subheadline %}
    <p class="text-lg sm:text-xl text-primary-100 max-w-3xl mx-auto mb-8">
      {{ pageContent.hero.subheadline }}
    </p>
    {%- elif site.description %}
    <p class="text-lg sm:text-xl text-primary-100 max-w-3xl mx-auto mb-8">
      {{ site.description }}
    </p>
    {%- endif %}
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {%- if pageContent.hero.cta_primary.text %}
      <a href="{{ pageContent.hero.cta_primary.url | url }}"
         class="inline-block bg-accent-500 hover:bg-accent-600 text-white font-medium px-6 py-3 rounded transition-colors text-lg">
        {{ pageContent.hero.cta_primary.text }}
      </a>
      {%- endif %}
      {%- if pageContent.hero.cta_secondary.text %}
      <a href="{{ pageContent.hero.cta_secondary.url | url }}"
         class="inline-block border border-primary-300 text-primary-100 hover:bg-primary-700 hover:text-white font-medium px-6 py-3 rounded transition-colors text-lg">
        {{ pageContent.hero.cta_secondary.text }}
      </a>
      {%- endif %}
    </div>
  </div>
</section>

{# ============================================ #}
{# About / Company Overview                     #}
{# ============================================ #}

{%- if pageContent.about.content %}
<section class="py-12 sm:py-16 lg:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <div>
        <h2 class="font-heading text-3xl sm:text-4xl font-bold text-primary-700 mb-6 border-b-3 border-primary-500 pb-2">
          {{ pageContent.about.title | default("About Us") }}
        </h2>
        <div class="text-gray-700 space-y-4">
          <p>{{ pageContent.about.content }}</p>
        </div>
        {%- if pageContent.about.highlights.length %}
        <ul class="mt-6 space-y-2">
          {%- for highlight in pageContent.about.highlights %}
          <li class="flex items-start gap-2">
            <span class="text-accent-500 font-bold mt-0.5">&#10003;</span>
            <span>{{ highlight }}</span>
          </li>
          {%- endfor %}
        </ul>
        {%- endif %}
      </div>
      <div class="hidden lg:block">
        {# Placeholder for company image â€” populated by merge #}
        <div class="bg-gray-100 rounded-lg aspect-video flex items-center justify-center text-gray-400">
          <span class="text-sm">Company image</span>
        </div>
      </div>
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Services / Capabilities                     #}
{# ============================================ #}

{%- if pageContent.services.length %}
<section class="py-12 sm:py-16 lg:py-20 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-primary-700 mb-10 text-center border-b-3 border-primary-500 pb-2 max-w-md mx-auto">
      Our Services
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {%- for service in pageContent.services %}
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm hover:shadow-md transition-shadow">
        <h3 class="font-heading text-xl font-semibold text-primary-700 mb-3">
          {{ service.name }}
        </h3>
        <p class="text-gray-600">
          {{ service.description }}
        </p>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Clients / Trust                              #}
{# ============================================ #}

{%- if pageContent.clients.length %}
<section class="py-12 sm:py-16 lg:py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-primary-700 mb-10 border-b-3 border-primary-500 pb-2 max-w-md mx-auto">
      Our Clients
    </h2>
    <div class="flex flex-wrap justify-center gap-8 items-center">
      {%- for client in pageContent.clients %}
      <span class="text-gray-600 font-medium text-lg">{{ client }}</span>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Contact CTA                                  #}
{# ============================================ #}

<section class="bg-primary-700 text-white py-12 sm:py-16">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold mb-4">
      Get in Touch
    </h2>
    <p class="text-lg text-primary-100 max-w-2xl mx-auto mb-8">
      {%- if site.description %}
      {{ site.description }}
      {%- else %}
      We'd love to hear from you. Reach out to learn more about how we can help.
      {%- endif %}
    </p>
    <a href="{{ '/contact/' | url }}"
       class="inline-block bg-accent-500 hover:bg-accent-600 text-white font-medium px-8 py-3 rounded transition-colors text-lg">
      Contact Us
    </a>
  </div>
</section>
