{# ---- Product Showcase — Real Dashboard Carousel ---- #}

<section class="py-20 sm:py-28 lg:py-32 bg-primary-950 section-divider accent-stripe">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <p class="text-accent-400 font-semibold text-xs uppercase tracking-[0.2em] mb-5">Product Preview</p>
      <h2 class="text-display text-4xl sm:text-5xl lg:text-6xl text-primary-50 mb-5 text-glow">
        See the Platform in Action
      </h2>
      <p class="text-primary-300 text-lg lg:text-xl max-w-2xl mx-auto text-pretty">
        Real dashboards powering enterprise AI visibility — from prompt research to real-time monitoring.
      </p>
    </div>
    <div class="relative reveal-scale" id="dash-carousel">
      {# Arrow buttons — desktop only #}
      <button type="button" class="dash-arrow dash-arrow-prev hidden lg:flex" aria-label="Previous dashboard">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
      </button>
      <button type="button" class="dash-arrow dash-arrow-next hidden lg:flex" aria-label="Next dashboard">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
      </button>
      {# Scrollable track #}
      <div class="dash-carousel-track flex gap-6 overflow-x-auto snap-x snap-mandatory pb-4" id="dash-track">

        {# ── Slide 1: Prompt Research ── #}
        <div class="dash-slide snap-center shrink-0 w-[85vw] sm:w-[560px] lg:w-[680px]">
          <div class="glass-card rounded-2xl p-5 sm:p-6 h-full" style="border-color: rgba(151,117,250,0.12)">
            <div class="flex items-center gap-2 pb-3 mb-4 border-b border-primary-700/20">
              <div class="w-2 h-2 rounded-full bg-accent-500"></div>
              <span class="font-heading text-[10px] font-semibold text-primary-300 uppercase tracking-wider">GEO Intelligent Agent</span>
              <span class="ml-auto text-[10px] px-2 py-0.5 bg-accent-500/10 rounded-full text-accent-400 font-medium">Prompt Research</span>
            </div>
            <div class="overflow-x-auto -mx-1">
              <table class="w-full text-[11px] sm:text-xs">
                <thead>
                  <tr class="border-b border-primary-700/30">
                    <th class="text-left py-2 px-2 text-primary-500 font-medium">ID</th>
                    <th class="text-left py-2 px-2 text-primary-500 font-medium">Prompt</th>
                    <th class="text-center py-2 px-1.5 text-primary-500 font-medium">ChatGPT</th>
                    <th class="text-center py-2 px-1.5 text-primary-500 font-medium">Google AI</th>
                    <th class="text-center py-2 px-1.5 text-primary-500 font-medium">Perplexity</th>
                  </tr>
                </thead>
                <tbody>
                  {%- set prompts = [
                    { id: "Q001", text: "Best enterprise AI visibility platform", c: "g", g: "g", p: "y" },
                    { id: "Q002", text: "GEO optimization tools for brands", c: "g", g: "y", p: "g" },
                    { id: "Q003", text: "How to monitor AI brand citations", c: "y", g: "g", p: "g" },
                    { id: "Q004", text: "AI search recommendation tracking", c: "g", g: "r", p: "y" },
                    { id: "Q005", text: "Generative engine optimization service", c: "g", g: "g", p: "g" },
                    { id: "Q006", text: "Brand visibility across AI platforms", c: "y", g: "y", p: "r" },
                    { id: "Q007", text: "AI content strategy for enterprise", c: "g", g: "g", p: "y" },
                    { id: "Q008", text: "Cross-platform AI monitoring tools", c: "g", g: "y", p: "g" }
                  ] %}
                  {%- for q in prompts %}
                  <tr class="border-b border-primary-800/30{% if loop.last %} border-b-0{% endif %}">
                    <td class="py-1.5 px-2 text-primary-500 font-mono text-[10px]">{{ q.id }}</td>
                    <td class="py-1.5 px-2 text-primary-200 truncate max-w-[200px]">{{ q.text }}</td>
                    <td class="py-1.5 px-1.5 text-center"><span class="inline-block px-1.5 py-0.5 rounded-full text-[9px] font-semibold {% if q.c == 'g' %}bg-emerald-500/15 text-emerald-400{% elif q.c == 'y' %}bg-amber-500/15 text-amber-400{% else %}bg-red-500/15 text-red-400{% endif %}">{% if q.c == 'g' %}Cited{% elif q.c == 'y' %}Partial{% else %}None{% endif %}</span></td>
                    <td class="py-1.5 px-1.5 text-center"><span class="inline-block px-1.5 py-0.5 rounded-full text-[9px] font-semibold {% if q.g == 'g' %}bg-emerald-500/15 text-emerald-400{% elif q.g == 'y' %}bg-amber-500/15 text-amber-400{% else %}bg-red-500/15 text-red-400{% endif %}">{% if q.g == 'g' %}Cited{% elif q.g == 'y' %}Partial{% else %}None{% endif %}</span></td>
                    <td class="py-1.5 px-1.5 text-center"><span class="inline-block px-1.5 py-0.5 rounded-full text-[9px] font-semibold {% if q.p == 'g' %}bg-emerald-500/15 text-emerald-400{% elif q.p == 'y' %}bg-amber-500/15 text-amber-400{% else %}bg-red-500/15 text-red-400{% endif %}">{% if q.p == 'g' %}Cited{% elif q.p == 'y' %}Partial{% else %}None{% endif %}</span></td>
                  </tr>
                  {%- endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>

        {# ── Slide 2: Brand Multi-dimensional Analysis ── #}
        <div class="dash-slide snap-center shrink-0 w-[85vw] sm:w-[560px] lg:w-[680px]">
          <div class="glass-card rounded-2xl p-5 sm:p-6 h-full" style="border-color: rgba(151,117,250,0.12)">
            <div class="flex items-center gap-2 pb-3 mb-4 border-b border-primary-700/20">
              <div class="w-2 h-2 rounded-full bg-accent-400"></div>
              <span class="font-heading text-[10px] font-semibold text-primary-300 uppercase tracking-wider">Brand Intelligence</span>
              <span class="ml-auto text-[10px] px-2 py-0.5 bg-accent-500/10 rounded-full text-accent-400 font-medium">Multi-dimensional</span>
            </div>
            {# Platform KPI cards #}
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-5">
              {%- set brandPlatforms = [
                { name: "Doubao", vis: "26.25", rec: "16.25" },
                { name: "DeepSeek", vis: "31.25", rec: "21.25" },
                { name: "Qwen", vis: "30.00", rec: "18.75" },
                { name: "Kimi", vis: "27.50", rec: "17.50" }
