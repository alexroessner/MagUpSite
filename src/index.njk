              {%- for p in brandPlatforms %}
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-3 text-center">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-1">{{ p.name }}</div>
                <div class="text-sm font-bold text-accent-400">{{ p.vis }}%</div>
                <div class="text-[10px] text-primary-400 mt-0.5">Rec: {{ p.rec }}%</div>
              </div>
              {%- endfor %}
            </div>
            {# Heatmap visualization #}
            <div class="bg-primary-900/30 rounded-xl p-4 border border-primary-700/15">
              <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-3">Competitor Heatmap</div>
              <div class="grid grid-cols-5 gap-1">
                {%- for i in range(20) %}
                <div class="h-5 rounded-sm" style="background: rgba(151, 117, 250, {{ [0.08, 0.15, 0.25, 0.38, 0.5, 0.12, 0.32, 0.45, 0.2, 0.1, 0.42, 0.22, 0.18, 0.38, 0.28, 0.48, 0.14, 0.35, 0.52, 0.06][i] }})"></div>
                {%- endfor %}
              </div>
              <div class="flex justify-between mt-2">
                <span class="text-[9px] text-primary-500">Low visibility</span>
                <span class="text-[9px] text-primary-500">High visibility</span>
              </div>
            </div>
          </div>
        </div>

        {# ── Slide 3: Real-time Monitoring ── #}
        <div class="dash-slide snap-center shrink-0 w-[85vw] sm:w-[560px] lg:w-[680px]">
          <div class="glass-card rounded-2xl p-5 sm:p-6 h-full" style="border-color: rgba(151,117,250,0.12)">
            <div class="flex items-center gap-2 pb-3 mb-4 border-b border-primary-700/20">
              <div class="w-2 h-2 rounded-full bg-emerald-400"></div>
              <span class="font-heading text-[10px] font-semibold text-primary-300 uppercase tracking-wider">Real-time Monitoring</span>
              <span class="ml-auto text-[10px] px-2 py-0.5 bg-emerald-500/10 rounded-full text-emerald-400 font-medium">Live</span>
            </div>
            {# KPI cards #}
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-5">
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-3">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-1">Visibility</div>
                <div class="text-lg font-bold text-accent-400">28.75%</div>
                <div class="text-[10px] text-emerald-400">+3.2%</div>
              </div>
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-3">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-1">Recommend</div>
                <div class="text-lg font-bold text-amber-400">18.44%</div>
                <div class="text-[10px] text-emerald-400">+1.8%</div>
              </div>
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-3">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-1">AI Answers</div>
                <div class="text-lg font-bold text-emerald-400">320</div>
                <div class="text-[10px] text-emerald-400">+42</div>
              </div>
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-3">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-1">Sources</div>
                <div class="text-lg font-bold text-primary-100">97</div>
                <div class="text-[10px] text-emerald-400">+8</div>
              </div>
            </div>
            {# Brand visibility ranking #}
            <div class="bg-primary-900/30 rounded-xl p-4 border border-primary-700/15">
              <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-3">Brand Visibility Ranking</div>
              <div class="space-y-2.5">
                {%- set brandRanks = [
                  { name: "Your Brand", pct: 78, hl: true },
                  { name: "Competitor A", pct: 65, hl: false },
                  { name: "Competitor B", pct: 52, hl: false },
                  { name: "Competitor C", pct: 41, hl: false },
                  { name: "Competitor D", pct: 33, hl: false }
                ] %}
                {%- for b in brandRanks %}
                <div class="flex items-center gap-2">
                  <span class="text-[10px] w-20 shrink-0 {% if b.hl %}text-accent-400 font-semibold{% else %}text-primary-400{% endif %}">{{ b.name }}</span>
                  <div class="flex-1 h-1.5 bg-primary-800/50 rounded-full overflow-hidden">
                    <div class="h-full rounded-full" style="width: {{ b.pct }}%; background: {% if b.hl %}linear-gradient(90deg, #7C5CF7, #B197FC){% else %}rgba(139, 114, 184, 0.3){% endif %}"></div>
                  </div>
                  <span class="text-[10px] w-8 text-right {% if b.hl %}text-accent-400{% else %}text-primary-500{% endif %}">{{ b.pct }}%</span>
                </div>
                {%- endfor %}
              </div>
            </div>
          </div>
        </div>

        {# ── Slide 4: Project Progress ── #}
        <div class="dash-slide snap-center shrink-0 w-[85vw] sm:w-[560px] lg:w-[680px]">
          <div class="glass-card rounded-2xl p-5 sm:p-6 h-full" style="border-color: rgba(151,117,250,0.12)">
            <div class="flex items-center gap-2 pb-3 mb-4 border-b border-primary-700/20">
              <div class="w-2 h-2 rounded-full bg-accent-500"></div>
              <span class="font-heading text-[10px] font-semibold text-primary-300 uppercase tracking-wider">Project Progress</span>
              <span class="ml-auto text-[10px] px-2 py-0.5 bg-accent-500/10 rounded-full text-accent-400 font-medium">Tracking</span>
            </div>
            <div class="flex flex-col sm:flex-row gap-6">
              {# Radial progress gauge #}
              <div class="flex flex-col items-center justify-center shrink-0">
                <svg viewBox="0 0 120 120" class="w-28 h-28" aria-label="32% complete">
                  <circle cx="60" cy="60" r="50" fill="none" stroke="rgba(42,29,94,0.5)" stroke-width="8"/>
                  <circle cx="60" cy="60" r="50" fill="none" stroke="url(#prog-grad)" stroke-width="8" stroke-linecap="round" stroke-dasharray="314" stroke-dashoffset="213" transform="rotate(-90 60 60)"/>
                  <defs><linearGradient id="prog-grad" x1="0%" y1="0%" x2="100%" y2="0%"><stop offset="0%" stop-color="#7C5CF7"/><stop offset="100%" stop-color="#B197FC"/></linearGradient></defs>
                  <text x="60" y="55" text-anchor="middle" fill="#B197FC" font-family="system-ui" font-weight="700" font-size="22">32%</text>
                  <text x="60" y="72" text-anchor="middle" fill="#8B72B8" font-family="system-ui" font-size="9">Complete</text>
                </svg>
              </div>
              {# Pipeline steps #}
              <div class="flex-1 space-y-3">
                <div class="text-[10px] text-primary-500 uppercase tracking-wider mb-2">Pipeline Steps</div>
                {%- set pipeSteps = [
                  { name: "Data Collection", st: "done" },
                  { name: "Content Analysis", st: "done" },
                  { name: "AI Optimization", st: "active" },
                  { name: "Distribution", st: "pending" },
                  { name: "Performance Review", st: "pending" }
                ] %}
                {%- for step in pipeSteps %}
                <div class="flex items-center gap-3">
                  <div class="w-6 h-6 rounded-full flex items-center justify-center text-[10px] font-bold shrink-0 {% if step.st == 'done' %}bg-emerald-500/20 text-emerald-400{% elif step.st == 'active' %}bg-accent-500/20 text-accent-400{% else %}bg-primary-700/30 text-primary-500{% endif %}">
                    {% if step.st == 'done' %}<svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>{% else %}{{ loop.index }}{% endif %}
                  </div>
                  <span class="text-xs {% if step.st == 'done' %}text-primary-300{% elif step.st == 'active' %}text-accent-400 font-medium{% else %}text-primary-500{% endif %}">{{ step.name }}</span>
                  {% if step.st == 'active' %}<span class="ml-auto text-[9px] px-1.5 py-0.5 bg-accent-500/10 rounded-full text-accent-400">In Progress</span>{% endif %}
                </div>
                {%- endfor %}
              </div>
            </div>
          </div>
        </div>

        {# ── Slide 5: Dashboard Home ── #}
