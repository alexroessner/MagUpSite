{# ============================================ #}
{# Hero Section                                 #}
{# ============================================ #}

<section class="bg-primary-900 text-white pt-16 pb-20 sm:pt-24 sm:pb-28 lg:pt-32 lg:pb-36">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 text-white">
      Get Your Brand Cited by AI
    </h1>
    <p class="text-lg sm:text-xl text-primary-200 max-w-3xl mx-auto mb-10">
      MagUp combines GEO + SEO to make your brand the answer when customers ask ChatGPT, Perplexity, Gemini, and Google AI Overviews.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {%- if pageContent.hero.cta_primary.text %}
      <a href="{{ pageContent.hero.cta_primary.url | url }}"
         class="inline-block bg-accent-500 hover:bg-accent-600 text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 text-lg">
        Get a Demo
      </a>
      {%- endif %}
      {%- if pageContent.hero.cta_secondary.text %}
      <a href="{{ '/case-study-regaining-ai-voice-share/' | url }}"
         class="inline-block border border-accent-500 text-accent-300 hover:bg-accent-500 hover:text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 text-lg">
        See Case Study
      </a>
      {%- endif %}
    </div>
  </div>
</section>

{# ============================================ #}
{# About / Company Overview                     #}
{# ============================================ #}

{%- if pageContent.about.content %}
<section class="py-16 sm:py-20 lg:py-24 bg-primary-900 border-t border-primary-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <div>
        <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-6 border-b-2 border-accent-500 pb-3">
          The Content Marketing Brain for Global Enterprises
        </h2>
        <div class="text-primary-200 space-y-4">
          <p>{{ pageContent.about.content }}</p>
        </div>
        {%- if pageContent.about.highlights.length %}
        <ul class="mt-6 space-y-2">
          {%- for highlight in pageContent.about.highlights %}
          <li class="flex items-start gap-2">
            <span class="text-accent-400 font-bold mt-0.5">&#10003;</span>
            <span class="text-primary-200">{{ highlight }}</span>
          </li>
          {%- endfor %}
        </ul>
        {%- endif %}
      </div>
      <div class="hidden lg:block">
        <div class="bg-primary-800 border border-primary-700 rounded-xl p-8 space-y-4">
          <div class="flex items-center gap-3">
            <span class="inline-block w-3 h-3 bg-accent-500 rounded-full"></span>
            <span class="text-white font-medium">7 Specialized AI Agents</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="inline-block w-3 h-3 bg-accent-500 rounded-full"></span>
            <span class="text-white font-medium">10+ AI Platforms Covered</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="inline-block w-3 h-3 bg-accent-500 rounded-full"></span>
            <span class="text-white font-medium">1000+ Global Enterprises</span>
          </div>
          <div class="flex items-center gap-3">
            <span class="inline-block w-3 h-3 bg-accent-500 rounded-full"></span>
            <span class="text-white font-medium">End-to-End GEO + SEO</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Services / Capabilities                     #}
{# ============================================ #}

{%- if pageContent.services.length %}
<section class="py-16 sm:py-20 lg:py-24 bg-primary-900 border-t border-primary-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-4 text-center border-b-2 border-accent-500 pb-3 max-w-xs mx-auto">
      Our Services
    </h2>
    <p class="text-primary-300 text-center mb-12 max-w-2xl mx-auto">
      Full-stack AI visibility across every major answer engine
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {%- for service in pageContent.services %}
      <div class="bg-primary-800 border border-primary-700 rounded-xl p-6 sm:p-8 hover:border-accent-500 transition-colors">
        <h3 class="font-heading text-xl font-semibold text-white mb-3">
          {{ service.name }}
        </h3>
        <p class="text-primary-300 text-sm leading-relaxed">
          {{ service.description }}
        </p>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

