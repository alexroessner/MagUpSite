          <div class="glass-card rounded-2xl p-5 sm:p-6 h-full" style="border-color: rgba(151,117,250,0.12)">
            <div class="flex items-center gap-2 pb-3 mb-4 border-b border-primary-700/20">
              <div class="w-2 h-2 rounded-full bg-accent-500"></div>
              <span class="font-heading text-[10px] font-semibold text-primary-300 uppercase tracking-wider">GEO 42 Dashboard</span>
              <span class="ml-auto flex gap-1.5" aria-hidden="true">
                <span class="w-2 h-2 rounded-full bg-primary-600"></span>
                <span class="w-2 h-2 rounded-full bg-primary-600"></span>
                <span class="w-2 h-2 rounded-full bg-accent-500"></span>
              </span>
            </div>
            {# Project cards #}
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 mb-4">
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-4 flex items-center gap-3">
                <svg viewBox="0 0 48 48" class="w-10 h-10 shrink-0" aria-hidden="true">
                  <circle cx="24" cy="24" r="20" fill="none" stroke="rgba(42,29,94,0.5)" stroke-width="4"/>
                  <circle cx="24" cy="24" r="20" fill="none" stroke="#9775FA" stroke-width="4" stroke-linecap="round" stroke-dasharray="125.6" stroke-dashoffset="85.4" transform="rotate(-90 24 24)"/>
                  <text x="24" y="27" text-anchor="middle" fill="#B197FC" font-size="10" font-weight="700">32%</text>
                </svg>
                <div>
                  <div class="text-xs font-semibold text-primary-100">Domestic GEO</div>
                  <div class="text-[10px] text-primary-500 mt-0.5">8 of 25 tasks</div>
                </div>
              </div>
              <div class="bg-primary-900/40 border border-primary-700/20 rounded-xl p-4 flex items-center gap-3">
                <svg viewBox="0 0 48 48" class="w-10 h-10 shrink-0" aria-hidden="true">
                  <circle cx="24" cy="24" r="20" fill="none" stroke="rgba(42,29,94,0.5)" stroke-width="4"/>
                  <circle cx="24" cy="24" r="20" fill="none" stroke="#7C5CF7" stroke-width="4" stroke-linecap="round" stroke-dasharray="125.6" stroke-dashoffset="81.6" transform="rotate(-90 24 24)"/>
                  <text x="24" y="27" text-anchor="middle" fill="#B197FC" font-size="10" font-weight="700">35%</text>
                </svg>
                <div>
                  <div class="text-xs font-semibold text-primary-100">Overseas GEO</div>
                  <div class="text-[10px] text-primary-500 mt-0.5">7 of 20 tasks</div>
                </div>
              </div>
            </div>
            {# Quick tools row #}
