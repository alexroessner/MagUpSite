---
layout: base.njk
title: Home
fullWidth: true
description: ""
---

{# ============================================ #}
{# Hero Section                                 #}
{# ============================================ #}

<section class="bg-primary-900 text-white pt-16 pb-20 sm:pt-24 sm:pb-28 lg:pt-32 lg:pb-36">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="font-heading text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6 text-white">
      {{ pageContent.hero.headline | default(site.name) }}
    </h1>
    {%- if pageContent.hero.subheadline %}
    <p class="text-lg sm:text-xl text-primary-300 max-w-3xl mx-auto mb-10">
      {{ pageContent.hero.subheadline }}
    </p>
    {%- elif site.description %}
    <p class="text-lg sm:text-xl text-primary-300 max-w-3xl mx-auto mb-10">
      {{ site.description }}
    </p>
    {%- endif %}
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {%- if pageContent.hero.cta_primary.text %}
      <a href="{{ pageContent.hero.cta_primary.url | url }}"
         class="inline-block bg-accent-500 hover:bg-accent-600 text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 text-lg">
        {{ pageContent.hero.cta_primary.text }}
      </a>
      {%- endif %}
      {%- if pageContent.hero.cta_secondary.text %}
      <a href="{{ pageContent.hero.cta_secondary.url | url }}"
         class="inline-block border border-primary-500 text-primary-200 hover:bg-primary-800 hover:text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 text-lg">
        {{ pageContent.hero.cta_secondary.text }}
      </a>
      {%- endif %}
    </div>
  </div>
</section>

{# ============================================ #}
{# About / Company Overview                     #}
{# ============================================ #}

{%- if pageContent.about.content %}
<section class="py-16 sm:py-20 lg:py-24 bg-primary-900 border-t border-primary-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <div>
        <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-6 border-b-2 border-accent-500 pb-3">
          {{ pageContent.about.title | default("About Us") }}
        </h2>
        <div class="text-primary-200 space-y-4">
          <p>{{ pageContent.about.content }}</p>
        </div>
        {%- if pageContent.about.highlights.length %}
        <ul class="mt-6 space-y-2">
          {%- for highlight in pageContent.about.highlights %}
          <li class="flex items-start gap-2">
            <span class="text-accent-400 font-bold mt-0.5">&#10003;</span>
            <span class="text-primary-200">{{ highlight }}</span>
          </li>
          {%- endfor %}
        </ul>
        {%- endif %}
      </div>
      <div class="hidden lg:block">
        <div class="bg-primary-800 border border-primary-700 rounded-xl aspect-video flex items-center justify-center text-primary-500">
          <span class="text-sm">Company image</span>
        </div>
      </div>
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Services / Capabilities                     #}
{# ============================================ #}

{%- if pageContent.services.length %}
<section class="py-16 sm:py-20 lg:py-24 bg-primary-900 border-t border-primary-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-12 text-center">
      Our Services
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {%- for service in pageContent.services %}
      <div class="bg-primary-900 border border-primary-700 rounded-xl p-6 sm:p-8 hover:border-accent-500 transition-colors">
        <h3 class="font-heading text-xl font-semibold text-white mb-3">
          {{ service.name }}
        </h3>
        <p class="text-primary-300 text-sm leading-relaxed">
          {{ service.description }}
        </p>
      </div>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Clients / Trust                              #}
{# ============================================ #}

{%- if pageContent.clients.length %}
<section class="py-16 sm:py-20 lg:py-24 bg-primary-900 border-t border-primary-700">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-white mb-10">
      Trusted By
    </h2>
    <div class="flex flex-wrap justify-center gap-8 items-center">
      {%- for client in pageContent.clients %}
      <span class="text-primary-400 font-medium text-lg">{{ client }}</span>
      {%- endfor %}
    </div>
  </div>
</section>
{%- endif %}

{# ============================================ #}
{# Contact CTA                                  #}
{# ============================================ #}

<section class="bg-primary-800 border-t border-primary-700 text-white py-16 sm:py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="font-heading text-3xl sm:text-4xl font-bold mb-4">
      Get Started
    </h2>
    <p class="text-lg text-primary-300 max-w-2xl mx-auto mb-8">
      {%- if site.description %}
      {{ site.description }}
      {%- else %}
      Ready to see how AI-powered content marketing can grow your brand?
      {%- endif %}
    </p>
    <a href="{{ '/contact/' | url }}"
       class="inline-block bg-accent-500 hover:bg-accent-600 text-white font-medium px-8 py-3 rounded-lg transition-all duration-200 text-lg">
      Contact Us
    </a>
  </div>
</section>
